	number = {1},
	journaltitle = {Limnology and Oceanography},
	shortjournal = {Limnol. Oceanogr.},
	author = {Ohnemus, Daniel C. and Rauschenberg, Sara and Cutter, Gregory A. and Fitzsimmons, Jessica N. and Sherrell, Robert M. and Twining, Benjamin S.},
	urldate = {2017-03-03},
	date = {2017-01-01},
	langid = {english},
	file = {Full Text PDF:/home/millieginty/Zotero/storage/RTSMA2Z6/Ohnemus et al. - 2017 - Elevated trace metal content of prokaryotic commun.pdf:application/pdf;Snapshot:/home/millieginty/Zotero/storage/62A8UPAK/abstract.html:text/html}
