	shortjournal = {Front. Mar. Sci.},
	author = {Sawakuchi, Henrique O. and Neu, Vania and Ward, Nicholas D. and Barros, Maria de Lourdes C. and Valerio, Aline M. and Gagne-Maynard, William and Cunha, Alan C. and Less, Diani F. S. and Diniz, Joel E. M. and Brito, Daimio C. and Krusche, Alex V. and Richey, Jeffrey E.},
	urldate = {2020-04-03},
	date = {2017},
	keywords = {Amazon, {CO}2 emissions, {CO}2 outgassing, {GHG} emission, global {CO}2 emission, Rivers},
	file = {Full Text PDF:/home/millieginty/Zotero/storage/CCI5EIVM/Sawakuchi et al. - 2017 - Carbon Dioxide Emissions along the Lower Amazon Ri.pdf:application/pdf}
