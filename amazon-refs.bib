	keywords = {Metagenome, Microbiota, Metagenomics, Rivers, Seasons, Transcriptome},
	file = {Full Text:/home/millieginty/Zotero/storage/CRQRBK3P/Satinsky et al. - 2015 - Metagenomic and metatranscriptomic inventories of .pdf:application/pdf}
